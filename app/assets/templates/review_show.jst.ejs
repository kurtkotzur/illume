<div class="panel panel-default review-container clearfix hoverable">
  <div class="review-info">
    <ul class="review-info-list">
      <li>
        <img class="user-photo-small" src="<%= review.get("user_photo_url") %>">
      </li>
      <li class="review-author">
        <a href="#/users/<%= review.user().get('id') %>"><%= review.user().escape('username') %></a>
      </li>
      <li class="plain-text"><%= review.user().escape("city") %>, <%= review.user().escape("state") %></li>
    </ul>
  </div>
  <div class="review-body">
    <div class="star-rating" data-review-id="<%= review.get('id') %>">
        <button type="button" class="btn btn-default btn-xs static-star" data-star-id="1" disabled>
          <span class="glyphicon glyphicon-heart"></span>
        </button
        ><button type="button" class="btn btn-default btn-xs static-star" data-star-id="2" disabled>
          <span class="glyphicon glyphicon-heart"></span>
        </button
        ><button type="button" class="btn btn-default btn-xs static-star" data-star-id="3" disabled>
          <span class="glyphicon glyphicon-heart"></span>
        </button
        ><button type="button" class="btn btn-default btn-xs static-star" data-star-id="4" disabled>
          <span class="glyphicon glyphicon-heart"></span>
        </button
        ><button type="button" class="btn btn-default btn-xs static-star" data-star-id="5" disabled>
          <span class="glyphicon glyphicon-heart"></span>
        </button>
    </div><div class="review-date plain-text">
      <%= moment(review.escape("created_at")).format("M/DD/YY") %>
    </div>
    <p class="review-text plain-text"><%= review.escape("body") %></p>
  </div>
</div>
