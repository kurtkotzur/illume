<div class="panel panel-default location-info-container clearfix hoverable">
  <button class="btn btn-success toggle-favorite" type="button" data-id="<%= location.escape('id') %>">
    <% if (location.favoriteUsers().get({ "id": YelpClone.currentUserId})) { %>
      Unfavorite
    <% } else { %>
      <span class="glyphicon glyphicon-star"></span> Favorite
    <% } %>
  </button>
  <div class="location-left-col">
  <h2><%= location.escape("name") %></h2>

  <ul class="location-info">
    <li class="average-stars">
      <button type="button" class="btn btn-default btn-xs static-star" data-star-id="1" disabled>
        <span class="glyphicon glyphicon-heart"></span>
      </button
      ><button type="button" class="btn btn-default btn-xs static-star" data-star-id="2" disabled>
        <span class="glyphicon glyphicon-heart"></span>
      </button
      ><button type="button" class="btn btn-default btn-xs static-star" data-star-id="3" disabled>
        <span class="glyphicon glyphicon-heart"></span>
      </button
      ><button type="button" class="btn btn-default btn-xs static-star" data-star-id="4" disabled>
        <span class="glyphicon glyphicon-heart"></span>
      </button
      ><button type="button" class="btn btn-default btn-xs static-star" data-star-id="5" disabled>
        <span class="glyphicon glyphicon-heart"></span>
      </button
      ><span class="plain-text"> <%= location.reviews().length %> Review<%= (location.reviews().length > 1) ? "s" : "" %></span>
    </li>
    <li class="plain-text"><%= location.escape("category") %></li>
    <li class="li-space-before plain-text"><%= location.escape("address") %></li>
  </ul>

  <div class="location-photo">
    <img src="<%= location.get('location_photo_url') %>" class="img-responsive">
  </div>
  </div>
  
  <div class="location-right-col">
    <ul class="more-location-info">
      <li>Ambience  <b class="plain-text"><%= location.escape("ambience") %></b></li>
      <li>Attire  <b class="plain-text"><%= location.escape("attire") %></b></li>
      <li>Noise level  <b class="plain-text"><%= location.escape("noise_level") %></b></li>
      <li>Cleanness  <b class="plain-text"><%= location.escape("cleanness") %></b></li>
      <li>Wifi  <b class="plain-text"><%= location.escape("wifi") ? 'Yes' : 'No' %></b></li>
      <li>Good for kids  <b class="plain-text"><%= location.escape("good_for_kids") ? 'Yes' : 'No' %></b></li>
      <li>Good for groups  <b class="plain-text"><%= location.escape("good_for_groups") ? 'Yes' : 'No' %></b></li>
      <li>Wheelchair accessible  <b class="plain-text"><%= location.escape("wheelchair_accessible") ? 'Yes' : 'No' %></b></li>
      <li>Outdoor  <b class="plain-text"><%= location.escape("outdoor") ? 'Yes' : 'No' %></b></li>
      
    </ul>
  </div>
</div>