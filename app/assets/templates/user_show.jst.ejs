
<div class="row">
  <div class="col-xs-6 col-xs-offset-1">

    <ul class="nav nav-tabs" role="tablist">
      <li class="active"><a id="info-tab" href="#info" role="tab" data-toggle="tab">Info</a></li>
      <li><a id="reviews-tab" href="#reviews" role="tab" data-toggle="tab">Reviews</a></li>
      <li><a id="favorites-tab" href="#favorites" role="tab" data-toggle="tab">Favorites</a></li>
    </ul>
    
    <div class="tab-content">
      <div class="tab-pane fade in active" id="info">
        
        <div class="panel panel-default user-container clearfix hoverable">
          <h2 class="username"><%= user.escape("username") %></h2>
          <img src="<%= user.get('photo_url') %>" class="img-responsive">
          <ul class="user-info">
            <li><strong>Location</strong></li>
            <li class="plain-text"><%= user.escape("city") %>, <%= user.escape("state") %></li>
            <li class="li-space-before"><strong>Total reviews</strong></li>
            <li class="plain-text"><%= user.reviews().length %></li>
            <li class="li-space-before"><strong>Favorited locations</strong></li>
            <li class="plain-text"><%= user.favorites().length %></li>
            <li class="li-space-before"><strong>illuming since</strong></li>
            <li class="plain-text"><%= moment(user.escape("created_at")).format("MMMM YYYY") %>
          </ul>
        </div>                                                          
      </div>
      
      <div class="tab-pane fade" id="reviews">
        
      </div>
      
      <div class="tab-pane fade" id="favorites">
        
      </div>
      
    </div>
  </div>
  <div class="col-xs-5">
    <span class="user-map-header">
      <%= user.escape("username") %>
    </span>
    <div class="user-map"></div>
  </div>
</div>
