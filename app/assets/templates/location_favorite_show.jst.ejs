<div class="row">
  <div class="col-xs-8">
    <div class="panel panel-default">
      <div class="review-info">
        <ul class="review-info-list">
          <li>
            <img class="user-photo-small" src="<%= favorite.get("user_photo_url") %>">
          </li>
          <li class="review-author">
            <a href="#/user/<%= favorite.get('id') %>"><%= favorite.escape('username') %></a>
          </li>
          <li><%= favorite.escape("city") %>, <%= favorite.escape("state") %></li>
        </ul>
      </div>
      <div class="review-body">
        <!-- TODO: show average stars -->
      </div>
    </div>
  </div>
</div>