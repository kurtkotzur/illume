<div class="row">
<div class="col-xs-4 col-xs-offset-3">
<h2>Add location</h2>
<form>
  
  <div class="form-group">
    <label for="location-name-input">Name</label>
    <input placeholder="App Academy" class="form-control" type="text" name="location[name]" id="location-name-input" autofocus="true">
  </div>
  
  <div class="form-group">
    <label for="location-address-input">Address</label>
    <input placeholder="1061 Market St #4, San Francisco, CA 94103" class="form-control" type="text" name="location[address]" id="location-address-input">
  </div>
  
  <div class="form-group">
    <label for="location-category-input">Category</label>
    <select class="form-control select-disabled" name="location[category]" id="location-category-input">
      <option value=""></option>
      <option class="placeholder" value="" disabled selected>Coding bootcamp</option>
      <option value="Anthill">Anthill</option>
      <option value="Bathroom">Bathroom</option>
      <option value="Bench">Bench</option>
      <option value="Bike rack">Bike rack</option>
      <option value="Trashcan">Trashcan</option>
      <option value="Vending machine">Vending machine</option>
      <option value="Water fountain">Water fountain</option>      
    </select>
  </div>
  
  <div class="form-group">
    <label for="location-ambience-input">Ambience</label>
    <select class="form-control select-disabled" name="location[ambience]">
      <option value=""></option>
      <option class="placeholder" value="" disabled selected>Academic</option>
      <option value="casual">Casual</option>
      <option value="classy">Classy</option>
      <option value="hispter">Hipster</option>
      <option value="intimate">Intimate</option>
      <option value="romantic">Romantic</option>
      <option value="touristy">Touristy</option>
      <option value="trendy">Trendy</option>      
    </select>
  </div>
  
  <div class="form-group">
    <label for="location-attire-input">Attire</label>
    <select class="form-control select-disabled" name="location[attire]">
      <option value=""></option>
      <option class="placeholder" value="" disabled selected>Any</option>
      <option value="casual">Casual</option>
      <option value="dressy">Dressy</option>
    </select>
  </div>
  
  <div class="form-group">
    <label for="location-noise-input">Noise level</label>
    <select class="form-control select-disabled" name="location[noise_level]">
      <option value=""></option>
      <option class="placeholder" value="" disabled selected>Jackhammer</option>
      <option value="silent">Silent</option>
      <option value="average">Average</option>
      <option value="loud">Loud</option>
    </select>
  </div>
  
  <div class="checkbox">
    <label>
      <input type="checkbox" name="location[wifi]" value="true">
      Wifi
    </label>
  </div>
  
  <div class="checkbox">
    <label>
      <input type="checkbox" name="location[wheelchair_accessible]" value="true">
      Wheelchair accessible
    </label>
  </div>
  
  <div class="form-group">
    <label for="picture-upload">Add photo</label>
      <input class="picture-upload" type="file" multiple>
    </label>
  </div>
  
  <button class="btn btn-success">Submit</button>
  
</form>
</div>
</div>