<h2>Add location</h2>

<form>
  
  <div class="form-group">
    <label for="location-name-input">Name</label>
    <input class="form-control" type="text" name="location[name]" id="location-name-input" autofocus="true">
  </div>
  
  <div class="form-group">
    <label for="location-address-input">Address</label>
    <input class="form-control" type="text" name="location[address]" id="location-address-input">
  </div>
  
  <div class="form-group">
    <label for="location-category-input">Category</label>
    <select class="form-control" name="location[category]" id="location-category-input">
      <option value=""></option>
      <option value="Anthill">Anthill</option>
      <option value="Bathroom">Bathroom</option>
      <option value="Bench">Bench</option>
      <option value="Bike_rack">Bike rack</option>
      <option value="Trashcan">Trashcan</option>
      <option value="Vending_machine">Vending machine</option>
      <option value="Water_fountain">Water fountain</option>      
    </select>
  </div>
  
  <div class="form-group">
    <label for="location-ambience-input">Ambience</label>
    <select class="form-control" name="location[ambience]">
      <option value=""></option>
      <option value="casual">Casual</option>
      <option value="classy">Classy</option>
      <option value="hispter">Hipster</option>
      <option value="intimate">Intimate</option>
      <option value="romantic">Romantic</option>
      <option value="touristy">Touristy</option>
      <option value="trendy">Trendy</option>      
    </select>
  </div>
  
  <div class="form-group">
    <label for="location-attire-input">Attire</label>
    <select class="form-control" name="location[attire]">
      <option value=""></option>
      <option value="casual">Casual</option>
      <option value="dressy">Dressy</option>
    </select>
  </div>
  
  <div class="form-group">
    <label for="location-noise-input">Noise level</label>
    <select class="form-control" name="location[noise_level]">
      <option value=""></option>
      <option value="silent">Silent</option>
      <option value="average">Average</option>
      <option value="loud">Loud</option>
    </select>
  </div>
  
  <div class="checkbox">
    <label>
      <input type="checkbox" name="location[wifi]" value="true">
      Wifi
    </label>
  </div>
  
  <div class="checkbox">
    <label>
      <input type="checkbox" name="location[wheelchair_accessible]" value="true">
      Wheelchair accessible
    </label>
  </div>
  
  <button class="btn btn-success">Submit</button>
  
</form>