<% action = (user.persisted? ? user_url(user) : users_url) %>
<% method = (user.persisted? ? "put" : "post") %>
<% message = (user.persisted? ? "Update user" : "Sign up") %>

<style>
body {
  background-image: url("/assets/splash.jpg");
}

nav {
  display: none;
}

#footer {
  display: none;
}
</style>

<div class="panel panel-default sign-up-container clearfix hoverable">
  <form action="<%= action %>" method="post" enctype="multipart/form-data">

    <input
    name="_method"
    type="hidden"
    value="<%= method %>">
    <input
    name="authenticity_token"
    type="hidden"
    value="<%= form_authenticity_token %>">

    <div class="form-group">
      <label for="user_username" class="splash">Username</label>
      <input
      placeholder="kurtkotzur"
      class="form-control"
      id="user_username"
      name="user[username]"
      type="text">
    </div>

    <div class="form-group">
      <label for="user_password-input" class="splash">Password</label>
      <input
      placeholder="••••••••"
      class="form-control"
      id="user_password-input"
      name="user[password]"
      type="password">
    </div>
    
    <div class="form-group">
      <label for="user-address-input" class="splash">Street Address</label>
      <input
      placeholder="1625 Woolsey St."
      class="form-control"
      id="address-input"
      name="user[address]"
      type="text">
    </div>
    
    <div class="form-group">
      <label for="user-city-input" class="splash">City</label>
      <input
      placeholder="Berkeley"
      class="form-control"
      id="user-city-input"
      name="user[city]"
      type="text">
    </div>
    
    <div class="form-group">
      <label for="user-state-input" class="splash">State</label>
      <select
      id="user-state-input"
      class="form-control select-disabled"
      name="user[state]">
        <option value=""></option>
        <option class="placeholder" value="CA" disabled selected>CA</option>
        <option value="AL">AL</option>
        <option value="AK">AK</option>
        <option value="AZ">AZ</option>
        <option value="AR">AR</option>
        <option value="CA">CA</option>
        <option value="CO">CO</option>
        <option value="CT">CT</option>
        <option value="CT">CT</option>
        <option value="DE">DE</option>
        <option value="DC">DC</option>
        <option value="FL">FL</option>
        <option value="GA">GA</option>
        <option value="HI">HI</option>
        <option value="ID">ID</option>
        <option value="IL">IL</option>
        <option value="IN">IN</option>
        <option value="IA">IA</option>
        <option value="KS">KS</option>
        <option value="KY">KY</option>
        <option value="LA">LA</option>
        <option value="ME">ME</option>
        <option value="MD">MD</option>
        <option value="MA">MA</option>
        <option value="MI">MI</option>
        <option value="MN">MN</option>
        <option value="MS">MS</option>
        <option value="MO">MO</option>
        <option value="MT">MT</option>
        <option value="NE">NE</option>
        <option value="NV">NV</option>
        <option value="NH">NH</option>
        <option value="NJ">NJ</option>
        <option value="NM">NM</option>
        <option value="NY">NY</option>
        <option value="NC">NC</option>
        <option value="ND">AL</option>
        <option value="OH">OH</option>
        <option value="OK">OK</option>
        <option value="OR">OR</option>
        <option value="PA">PA</option>
        <option value="RI">RI</option>
        <option value="SC">SC</option>
        <option value="SD">SD</option>
        <option value="TN">TN</option>
        <option value="TX">TX</option>
        <option value="UT">UT</option>
        <option value="VT">VT</option>
        <option value="VA">VA</option>
        <option value="WA">WA</option>
        <option value="WV">WV</option>
        <option value="WI">WI</option>
        <option value="WY">WY</option>
      </select>
    </div>
    
    <div class="form-group">
      <label for="user-zip-input" class="splash">ZIP</label>
      <input
      placeholder="94703"
      class="form-control"
      id="user-zip-input"
      name="user[zip]"
      type="text">
    </div>
    
    <div class="form-group splash">
      <label for="user-photo-input">Photo</label>
      <input class="user-photo-input" name="user[user_photo]" type="file" multiple>
    </div>

    <button class="btn btn-success"><%= message %></button>
  </form>
</div>